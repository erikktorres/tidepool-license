
- var scripts = getBlock('scripts')
- var styles = getBlock('styles')

- styles.add(["styles/site.css")
- scripts.add(['scripts/site.js'])
- scripts.add(document.scripts || [ ])

doctype 5
html(lang="en")
  head

    // Meta
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
  //- Our site title and description
    title= getPreparedTitle()
    meta(name="description", content=getPreparedDescription())
    meta(name="keywords", content=getPreparedKeywords())
    meta(name="author", content=site.author || '')

    base(href=site.url)

    //-

    base(href=site.url)

    //- Output DocPad produced meta elements
    != getBlock('meta').toHTML()

    //- Mobile viewport optimized: h5bp.com/viewport
    meta(name="viewport", content="width=device-width")

    != styles.toHTML()

  body.page.page-template-default
    div.hfeed#wrapper
      a#top

    header#header
    div#page-content-header
    div.global-width
    div#page-content-header-icon-container
      img(src="/images/icon-developers-01.svg", class="attachment-full", alt="icon_developers-01")
    div#main(role="main")
      div#page-background-container
        img(src="/images/illustration_02.svg")
      div.clearfix.global-width#main-inner
        div#container
          div.clearfix#content!= content

    footer#footer
      
    
    // Scripts
    != scripts.toHTML()

